<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/reorder"
        android:src="@drawable/reorder_horizontal"
        android:layout_width="36dp"
        android:layout_height="36dp" />


    <LinearLayout
        android:id="@+id/container_duration_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/duration"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:ellipsize="marquee"
            android:textColor="@color/fragment_tracks_text"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            tools:text="2:43"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/delete"
            android:src="@drawable/delete"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/container_duration_delete"
        android:layout_toRightOf="@id/reorder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:lines="1"
            android:ellipsize="marquee"
            android:id="@+id/title"
            android:textColor="@color/fragment_tracks_text"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            tools:text="American Idiot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/artist"
            android:lines="1"
            android:ellipsize="marquee"
            android:textColor="@color/fragment_tracks_text"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:fontFamily="sans-serif-thin"
            tools:text="Green Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>